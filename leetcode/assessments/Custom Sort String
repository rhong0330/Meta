class Solution {
public:
    string customSortString(string order, string s) {
        unordered_map<char, int> hash;
        string result;
        for(int i = 0; i < order.size(); i++) {
            hash[order[i]] = i + 1;
        }
        
        sort(s.begin(), s.end(), [&](char a, char b) {
            return hash[a] < hash[b]; 
        });
        
        return s;
    }
};
