/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    
    bool compareTwoLists(ListNode* list1, ListNode* list2){
        if (list1->val <= list2->val) {
            return true; //list1
        } else {
            return false; //list2
        }
    }
    
    ListNode* mergeTwoLists(ListNode* list1, ListNode* list2) {
        ListNode dummy(0);
        ListNode* result = &dummy;
        while (list1 != nullptr && list2 != nullptr){
            if (compareTwoLists(list1, list2)) {
                result->next = list1;
                list1 = list1->next;
            } else {
                result->next = list2;
                list2 = list2->next;
            }
            result = result->next;
        }
        
        // Append the remaining nodes from either list
        if (list1 != nullptr) {
            result->next = list1;
        } else if (list2 != nullptr) {
            result->next = list2;
        }
        return dummy.next;
    }


};
